
<div class = "all-burgers">

    <div class="favorites-section">
        <h2>Favorite Burgers</h2>

        {{#each burgers}}
            {{#if is_favorite}}

                <div class="burger" data-id="{{id}}">
                    <img src="./images/cheeseburger.jpg" alt="">
                    <p>{{burger_name}}</p>
                    <button class="btn-dark" data-id="{{id}}"> Delete </button>
                </div>

            {{/if}}
        {{/each}}
    </div>

    <div class="unfavorites-section">
        <h2>Non Favorite Burgers</h2>

        {{#each burgers}}
            {{#unless is_favorite}}

                <div class="burger" data-id="{{id}}">
                    <img src="./images/cheeseburger.jpg" alt="">
                    <p>{{burger_name}}</p>
                    <button class="btn-dark" data-id="{{id}}"> Delete </button>
                </div>

            {{/unless}}
        {{/each}}
    </div>
</div>